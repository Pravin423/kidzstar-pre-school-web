<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admission Form</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="flex items-center justify-center min-h-screen bg-gray-100 p-4">

  <!-- Admission Form Container -->
  <form action="/admission" method="POST" class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md relative">

    <!-- Home Button -->
    <a href="/" class="absolute top-4 left-4 text-blue-600 hover:underline text-sm font-medium">
      ‚Üê Home
    </a>

    <!-- Form Title -->
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-4">Enquiry Form</h1>

    <!-- Name -->
    <input
      type="text"
      name="name"
      placeholder="Your Name"
      required
      class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none mb-3"
    />

    <!-- Email -->
    <input
      type="email"
      name="email"
      placeholder="Your Email"
      required
      class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none mb-3"
    />

    <!-- Phone -->
    <input
      type="tel"
      name="phone"
      placeholder="Your Phone"
      required
      class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none mb-3"
    />

    <!-- Child's Name -->
    <input
      type="text"
      name="childName"
      placeholder="Child's Name"
      required
      class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none mb-3"
    />

    <!-- Child's Age -->
    <input
      type="number"
      name="childAge"
      placeholder="Child's Age"
      required
      class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none mb-3"
    />

    <!-- Course Selection -->
    <select
      id="course"
      name="course"
      required
      class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none mb-3"
    >
      <option value="" disabled selected>Select a course</option>
      <option value="playgroup">Playgroup</option>
      <option value="nursery">Nursery</option>
      <option value="jrkg">Jr. KG</option>
      <option value="srkg">Sr. KG</option>
    </select>

    <!-- Slot Booking -->
    <label for="bookslot" class="block text-gray-700 font-semibold mb-2">Book a Slot:</label>
    <input
      type="datetime-local"
      id="bookslot"
      name="bookslot"
      required
      class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none mb-3"
    />

    <!-- Submit Button -->
    <button
      type="submit"
      class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold p-3 rounded-md transition duration-300"
    >
      Apply
    </button>

    <!-- Disclaimer -->
    <p class="text-center text-gray-600 mt-4">
      By submitting this form, you agree to our
      <a href="/terms" class="text-blue-600">Terms and Conditions</a>.
    </p>

  </form>

</body>
</html>
