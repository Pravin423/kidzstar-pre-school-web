

<h1>Admission Form</h1>
<form action="/admission" method="POST">
    <input type="text" name="name" placeholder="Your Name" required>
    <input type="email" name="email" placeholder="Your Email" required>
    <input type="tel" name="phone" placeholder="Your Phone" required>
    <input type="text" name="childName" placeholder="Child's Name" required>
    <input type="number" name="childAge" placeholder="Child's Age" required>
    <textarea name="message" placeholder="Additional Message"></textarea>   
    
    <!-- Booking date and time selection -->
    <label for="bookslot">Book a Slot:</label>
    <input type="datetime-local" id="bookslot" name="bookslot" required>

    <button type="submit">Apply</button>
</form>

