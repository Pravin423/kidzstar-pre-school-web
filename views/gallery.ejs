<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/public/css/homepage.css" />
    <link rel="stylesheet" href="/public/css/about.css" />
    <style>
        section {
            overflow-x: hidden; /* Prevents horizontal scrollbar */
        }

        .gallery-img {
            width: 100%;
            height: 350px;
            object-fit: cover;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .gallery-img:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .modal {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 50;
            visibility: hidden;
            opacity: 0;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .modal.active {
            visibility: visible;
            opacity: 1;
        }

        .modal-content {
            position: relative;
        }

        .modal img {
            max-width: 90vw;
            max-height: 90vh;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
            border: 4px solid white;
        }

        .modal video {
            max-width: 90vw;
            max-height: 90vh;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
            border: 4px solid white;
        }

        .close-btn {
            position: absolute;
            top: -20px;
            right: -20px;
            background: white;
            color: black;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 24px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
<body class="bg-gray-100">
    <header class="bg-white shadow-md py-4 text-center">
        <%- include('partials/navbar') %>
    </header>

    <!-- Image Gallery Section -->
    <section class="max-w-7xl mx-auto my-10 p-6 bg-white shadow-lg rounded-lg">
        <h2 class="text-2xl font-bold mb-6 text-center">Photo Gallery</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <img src="/images/img1.jpg" alt="Planting 1" class="gallery-img cursor-pointer">
            <img src="/images/img2.jpg" alt="Planting 2" class="gallery-img cursor-pointer">
            <img src="/images/img3.jpg" alt="Cleaning 1" class="gallery-img cursor-pointer">
            <img src="/images/img4.jpg" alt="Cleaning 2" class="gallery-img cursor-pointer">
            <img src="/images/img5.jpg" alt="Cleaning 3" class="gallery-img cursor-pointer">
            <img src="/images/img6.jpg" alt="Planting 1" class="gallery-img cursor-pointer">
            <img src="/images/img7.jpg" alt="Planting 2" class="gallery-img cursor-pointer">
            <img src="/images/img8.jpg" alt="Cleaning 1" class="gallery-img cursor-pointer">
            <img src="/images/img9.jpg" alt="Cleaning 2" class="gallery-img cursor-pointer">
            <img src="/images/img10.jpg" alt="Cleaning 3" class="gallery-img cursor-pointer">
            <img src="/images/img11.jpg" alt="Planting 1" class="gallery-img cursor-pointer">
            <img src="/images/img12.jpg" alt="Planting 2" class="gallery-img cursor-pointer">
            <img src="/images/img13.jpg" alt="Cleaning 1" class="gallery-img cursor-pointer">
            <img src="/images/img14.jpg" alt="Cleaning 2" class="gallery-img cursor-pointer">
            <img src="/images/img15.jpg" alt="Cleaning 3" class="gallery-img cursor-pointer">
            <img src="/images/img16.jpg" alt="Planting 1" class="gallery-img cursor-pointer">
            <img src="/images/img17.jpg" alt="Planting 2" class="gallery-img cursor-pointer">
            <img src="/images/img18.jpg" alt="Cleaning 1" class="gallery-img cursor-pointer">
            <img src="/images/img19.jpg" alt="Cleaning 2" class="gallery-img cursor-pointer">
            <img src="/images/img20.jpg" alt="Cleaning 3" class="gallery-img cursor-pointer">
            <img src="/images/img21.jpg" alt="Planting 1" class="gallery-img cursor-pointer">
            <img src="/images/img22.jpg" alt="Planting 2" class="gallery-img cursor-pointer">
            <img src="/images/img23.jpg" alt="Cleaning 1" class="gallery-img cursor-pointer">
            <img src="/images/img24.jpg" alt="Cleaning 2" class="gallery-img cursor-pointer">
            <img src="/images/img25.jpg" alt="Cleaning 3" class="gallery-img cursor-pointer">
            <img src="/images/img26.jpg" alt="Cleaning 3" class="gallery-img cursor-pointer">
            <img src="/images/img27.jpg" alt="Planting 1" class="gallery-img cursor-pointer">
            <img src="/images/img28.jpg" alt="Planting 2" class="gallery-img cursor-pointer">
            <img src="/images/img29.jpg" alt="Cleaning 1" class="gallery-img cursor-pointer">
        </div>
    </section>

    <!-- Video Gallery Section -->
    <section class="max-w-7xl mx-auto my-10 p-6 bg-white shadow-lg rounded-lg">
        <h2 class="text-2xl font-bold mb-6 text-center">Video Gallery</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <video src="/images/video1.mp4" class="gallery-img cursor-pointer" controls muted></video>
            <video src="/images/video2.mp4" class="gallery-img cursor-pointer" controls muted></video>
            <video src="/images/video3.mp4" class="gallery-img cursor-pointer" controls muted></video>
            <video src="/images/video4.mp4" class="gallery-img cursor-pointer" controls muted></video>
            <video src="/images/video5.mp4" class="gallery-img cursor-pointer" controls muted></video>
            <video src="/images/video7.mp4" class="gallery-img cursor-pointer" controls muted></video>
            <video src="/images/video8.mp4" class="gallery-img cursor-pointer" controls muted></video>
            <video src="/images/video9.mp4" class="gallery-img cursor-pointer" controls muted></video>
            <video src="/images/video10.mp4" class="gallery-img cursor-pointer" controls muted></video>
        </div>
    </section>

    <!-- Modal (reused for both images & videos) -->
    <div id="imageModal" class="modal">
        <div class="modal-content">
            <div class="close-btn" id="closeModal">Ã—</div>
            <img id="modalImg" src="" alt="Enlarged Image" style="display: none;">
            <video id="modalVideo" src="" controls autoplay style="display: none;"></video>
        </div>
    </div>

    <script>
        const galleryImages = document.querySelectorAll('.gallery-img');
        const modal = document.getElementById('imageModal');
        const modalImg = document.getElementById('modalImg');
        const modalVideo = document.getElementById('modalVideo');
        const closeModal = document.getElementById('closeModal');

        galleryImages.forEach(media => {
            media.addEventListener('click', () => {
                modal.classList.add('active');

                if (media.tagName === 'IMG') {
                    modalImg.src = media.src;
                    modalImg.style.display = 'block';
                    modalVideo.style.display = 'none';
                } else if (media.tagName === 'VIDEO') {
                    modalVideo.src = media.src;
                    modalVideo.style.display = 'block';
                    modalImg.style.display = 'none';
                }
            });
        });

        modal.addEventListener('click', (e) => {
            if (e.target === modal || e.target === closeModal) {
                modal.classList.remove('active');
                modalVideo.pause();
            }
        });
    </script>
    <footer class="bg-gray-900 text-white py-8 text-center">
    <%- include('partials/footer') %>
  </footer>
</body>
</html>
