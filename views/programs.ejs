    <style>
      @keyframes underline {
        0% {
          background-size: 0% 3px;
        }
        50% {
          background-size: 100% 3px;
        }
        100% {
          background-size: 0% 3px;
        }
      }

      .underline-animation {
        display: inline-block;
        position: relative;
        background-image: linear-gradient(to right, #ed0c2e, #ff1d1d);
        background-repeat: no-repeat;
        background-size: 0% 3px;
        background-position: left bottom;
        padding-bottom: 5px;
        animation: underline 3s infinite ease-in-out;
      }
      @keyframes jiggle {
        0%,
        100% {
          transform: rotate(-3deg);
        }
        50% {
          transform: rotate(3deg);
        }
      }

      .jiggle-on-hover:hover {
        animation: jiggle 0.4s ease-in-out;
      }

      @keyframes softJiggleOnce {
        0% {
          transform: rotate(0deg) scale(1) translateX(0);
        }
        25% {
          transform: rotate(1deg) scale(1.03) translateX(-2px);
        }
        50% {
          transform: rotate(-1deg) scale(1.02) translateX(2px);
        }
        75% {
          transform: rotate(1deg) scale(1.01) translateX(-1px);
        }
        100% {
          transform: rotate(0deg) scale(1) translateX(0);
        }
      }

      .jiggle-on-hover:hover {
        animation: softJiggleOnce 0.6s ease-in-out;
        animation-fill-mode: forwards;
      }

      .card {
        position: relative;
        overflow: hidden;
        border-radius: 30px;
        transition: all 0.4s;
        box-shadow: 0px 0px 10px 5px rgba(0, 0, 0, 0.3);
        transform: scale(1);
      }

      .card:hover {
        transform: scale(1.05);
        cursor: pointer;
        background: rgb(95, 143, 255);
      }

      .first-content,
      .second-content {
        position: absolute;
        width: 100%;
        height: 100%;
        transition: all 0.4s;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 30px;
      }

      .first-content {
        opacity: 1;
        z-index: 2;
      }

      .card:hover .first-content {
        opacity: 0;
        z-index: 1;
      }

      .second-content {
        opacity: 0;
        transform: rotate(90deg) scale(-1);
        z-index: 1;
      }

      .card:hover .second-content {
        opacity: 1;
        transform: rotate(0deg) scale(1);
        z-index: 2;
      }
    </style>
