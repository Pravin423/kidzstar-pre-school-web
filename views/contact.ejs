          <input type="email" name="email" placeholder="Email Address*" required class="w-full p-3 bg-gray-50 border border-gray-200 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" />

          <input type="tel" name="phone" placeholder="Mobile Number*" required class="w-full p-3 bg-gray-50 border border-gray-200 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" />

