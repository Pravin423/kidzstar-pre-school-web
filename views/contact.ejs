            <option value="nursery">Nursery</option>
            <option value="jrkg">Jr. KG</option>
            <option value="srkg">Sr. KG</option>
          </select>

          <div>
            <label for="bookslot" class="block mb-1 font-semibold text-gray-700">Book a Slot*</label>
            <input type="datetime-local" id="bookslot" name="bookslot" required class="w-full p-3 bg-gray-50 border border-gray-200 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" />
          </div>

          <div class="flex items-start">
            <input type="checkbox" id="agreement" required class="mt-1 mr-2 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
            <label for="agreement" class="text-sm text-gray-600">
              I agree to receive information regarding my submitted application.
            </label>
          </div>

          <button type="submit" class="w-full bg-yellow-400 hover:bg-yellow-500 text-gray-800 font-semibold py-3 rounded-md shadow-md hover:shadow-lg transition duration-300">
            Submit Enquiry
          </button>
        </div>
